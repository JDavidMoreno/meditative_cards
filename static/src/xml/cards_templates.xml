<?xml version="1.0" encoding="utf-8"?>

<templates id="meditative_cards_templates" xml:space="preserve">

    <!-- Widget controlled board component -->
    <t t-name="cards.Board">
        <t t-if="widget.isVerticalScreen">
            <div class="row justify-content-center">
                <div class="col-3">
                    <i id="shuffle-cards" class="fa fa-refresh" alt="Shuffle all the cards again." />
                    <div position="relative" class="cards-container">
                        <!-- Cards go here inside -->
                    </div>
                    <div position="relative" class="messages-container">
                        <!-- Messagea will be appended here -->
                    </div>
                </div>
            </div>
        </t>
        <t t-else="">
            <p>Nothing for the moment</p>
        </t>
    </t>

    <div t-name="cards.Card" class="card-wrapper" draggable="true">
        <div t-name="cards.Card" t-att-class="'meditative-card ' + (widget.variant === 'card' ? 'variant-card' : 'variant-message')" t-att-style="'transform: rotate(' + widget.rotation + 'deg);'">
            <img class="card-image front" style="display: none;" t-attf-src="{{ widget.url }}" alt="Meditative Card" />
            <img class="card-image back" style="display: block;" t-attf-src="/meditative_cards/static/src/img/{{ widget.variant === 'card' ? 'card-back' : 'message-back' }}.jpg" alt="Meditative Back Card" />
            <div class="card_filter" />
        </div>
    </div>

</templates>
